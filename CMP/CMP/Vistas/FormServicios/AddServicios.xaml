            <Button  Text="Guardar"
                     x:Name="BttnGuardar"
                     Command="{Binding GuardarDatosCommando}"
                     VerticalOptions="Center"
                     FontSize="15"
                     Grid.Row="3"
                     Grid.ColumnSpan="3"
                     FontAttributes="Bold"
                     Padding="0"
                     BackgroundColor="#BE5165"
                     TextColor="White"
                     CornerRadius="10"
                     Margin="0,0,0,70" />
        </StackLayout>

