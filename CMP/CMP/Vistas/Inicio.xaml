                   Padding="0"
                   HasShadow="False">
                <Label Text="CalMaP"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       FontSize="23"
                       FontAttributes="Bold"
                       Margin="0,13,40,0"
                       TextColor="White" />
            </Frame>

            <!--contenido-->

            <Frame Margin="15,0,15,15"
                   CornerRadius="15">
                <StackLayout Orientation="Vertical"
                             HorizontalOptions="Center"
                             VerticalOptions="Start"
                             Spacing="15">
                    <Frame CornerRadius="15"
                           BackgroundColor="#F7F6F6">
                        <Grid RowDefinitions="40,32,40,30">
                            <Label Text="Resumen General"
                                   FontSize="24"
                                   Grid.ColumnSpan="3"
                                   FontAttributes="Bold"
                                   Margin="0,-5,0,0" />
                            <Image Grid.Row="1"
                                   Grid.Column="0"
                                   Source="Iconchecked.png"
                                   HeightRequest="60" />
                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   Text="a"
                                   TextColor="#202020"
                                   HorizontalOptions="CenterAndExpand"
                                   Margin="0,0,0,0"
                                   FontSize="20"
                                   x:Name="labelDisponibles" />
                            <!--Estado 1 de vehiculos en uso-->
                            <Image Grid.Row="1"
                                   Grid.Column="1"
                                   Source="Iconpause.png" />
                            <Label Grid.Row="2"
                                   Grid.Column="1"
                                   Text="b"
                                   HorizontalOptions="CenterAndExpand"
                                   Margin="0,00,0,0"
                                   FontSize="20"
                                   TextColor="#202020"
                                   x:Name="labelEnUso" />
                            <!--Estado 2 de vehiculos disponibles-->
                            <Image Grid.Row="1"
                                   Grid.Column="2"
                                   Source="Iconwarning.png" />
                            <Label Grid.Row="2"
                                   Grid.Column="2"
                                   Text="c"
                                   HorizontalOptions="CenterAndExpand"
                                   Margin="0,0,0,0"
                                   FontSize="20"
                                   TextColor="#202020"
                                   x:Name="labelEnMantenimiento" />
                            <!--Estado 3 de vehiculos en mantenimieto-->
                            <Button  Text="Calendario"
                                     FontSize="15"
                                     Grid.Row="3"
                                     Grid.ColumnSpan="3"
                                     FontAttributes="Bold"
                                     Padding="-10"
                                     BackgroundColor="#BE5165"
                                     TextColor="White"
                                     CornerRadius="10"
                                     Command="{Binding NavCalendarioCommand}" />
                        </Grid>

                    </Frame>

